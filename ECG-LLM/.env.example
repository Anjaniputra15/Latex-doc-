# ECG-LLM Environment Configuration
# Copy this file to .env and add your actual values

# =============================================================================
# LLM API KEYS (Choose one or both)
# =============================================================================

# OpenAI API Key (for GPT-4 reports)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude reports) 
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Database (default)
DATABASE_URL=sqlite:///data/ecg_analyses.db

# PostgreSQL Database (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ecg_llm

# =============================================================================
# MODEL PATHS
# =============================================================================

# ViT-ECG Model Path
VIT_MODEL_PATH=models/trained/best_vit_ecg.pth

# Image Converter Method (waveform, spectrogram, hybrid)
ECG_IMAGE_METHOD=waveform

# =============================================================================
# PTB-XL DATASET CONFIGURATION
# =============================================================================

# PTB-XL Dataset Path
PTB_XL_PATH=data/ptb-xl/
PTB_XL_DATABASE_CSV=data/ptb-xl/ptbxl_database.csv

# Sampling Rate (100 or 500 Hz)
SAMPLING_RATE=500

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Training Device (auto, cpu, cuda)
DEVICE=auto

# Batch Size
BATCH_SIZE=16

# Learning Rate
LEARNING_RATE=1e-4

# Number of Epochs
EPOCHS=50

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# API Authentication (optional)
API_SECRET_KEY=your_secret_key_here

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable Tensorboard Logging
ENABLE_TENSORBOARD=true

# Prometheus Metrics Port
PROMETHEUS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEBUG=false

# Use Mock Data (for testing without PTB-XL)
USE_MOCK_DATA=false

# Mock LLM Responses (when API keys not available)
USE_MOCK_LLM=false